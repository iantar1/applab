// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id        String       @id @default(cuid())
  phone     String       @unique
  email     String       @unique
  password  String
  fullName  String
  cin       String       @unique
  isAdmin   Boolean      @default(false)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  appointments Appointment[]
  insurances   Insurance[]
}

model Service {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  price       Float
  category    String
  duration    Int      @default(30) // minutes
  createdAt   DateTime @default(now())

  appointments Appointment[]
}

model Appointment {
  id                String   @id @default(cuid())
  userId            String?  // optional for guest bookings
  serviceId         String
  appointmentDate   DateTime
  appointmentTime   String   // e.g. "09:00"
  status            String   @default("pending") // pending, paid, completed
  totalPrice        Float
  insuranceId       String?  // optional
  stripeSessionId   String?
  pdfPath           String?
  notes             String?  // additional notes from booking form
  // Guest / beneficiary info (when userId is set: admin booking for someone else)
  guestName         String?
  guestEmail        String?
  guestPhone        String?
  guestCin          String?
  reminder1DaySentAt  DateTime?  // set when "day before" reminder sent
  reminder1HourSentAt DateTime?  // set when "1 hour before" reminder sent
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  service   Service   @relation(fields: [serviceId], references: [id])
  insurance Insurance? @relation(fields: [insuranceId], references: [id])

  @@index([userId])
  @@index([serviceId])
  @@index([appointmentDate])
  @@index([status])
  @@index([insuranceId])
}

model Insurance {
  id                String        @id @default(cuid())
  userId            String
  insuranceCompany  String
  membershipNumber  String
  contractNumber    String
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[] // back-relation

  @@index([userId])
}

model AppSetting {
  id           String  @id @default(cuid())
  key          String  @unique
  value        String
  block_number String? // JSON array of blocked numbers or group IDs (e.g. ["212708010325", "120363421754134116@g.us"])
}

model Message {
  id        String   @id @default(cuid())
  fromPhone String
  toPhone   String
  body      String
  sender    String?  // user name that sent the message
  direction String   // inbound | outbound
  createdAt DateTime @default(now())

  @@index([fromPhone])
  @@index([toPhone])
  @@index([createdAt])
}
